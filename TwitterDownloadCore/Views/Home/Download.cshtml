@model List<VideoResultViewModel>
@{
    ViewData["Title"] = "Twitter Video Download";
}
@section MetaTags
    {
    <link rel="alternate" href="http://www.twittervideodownloads.com/zh/" hreflang="zh-Hans" />
    <meta property="og:locale" content="en" />
    <meta property="og:title" content="Download Twitter Videos - the best way to download Twitter videos" />
    <meta property="og:type" content="product" />
    <meta property="og:url" content="http://www.twittervideodownloads.com" />
    <meta property="og:site_name" content="Download Twitter Videos to MP4 & MP3! Online Easy and Free" />
    <meta name="description" content="Download Twitter Videos - Online, Easy and Free Online Twitter Video Downloader! Save any Twitter video  to MP3, MP4 and HD. Download Twitter Videos Online for free without Java or any 3rd party extensions. Your answer for how to download Twitter Video" />
